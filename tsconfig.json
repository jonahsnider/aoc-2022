{
	"compilerOptions": {
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "esnext",
		"moduleResolution": "node",
		"outDir": "tsc_output",
		"resolveJsonModule": true,
		"target": "esnext",
		"exactOptionalPropertyTypes": false
	},
	"exclude": ["node_modules", "coverage"],
	"extends": "@tsconfig/node18-strictest-esm",
	"include": ["src", "test"]
}
